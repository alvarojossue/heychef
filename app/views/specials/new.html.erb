Create a new special for <%= current_restaurant.name %>
<%= form_for [@the_special] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
	<%= f.label :price %>
	<%= f.number_field :price %>
	<br>

	<%= f.submit "Save" %>
<% end %>